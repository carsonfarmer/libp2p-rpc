{
  "name": "@nullify/libp2p-rpc",
  "version": "0.0.0",
  "description": "Bi-directional RPC over libp2p streams",
  "main": "src/index.js",
  "types": "types/index.d.ts",
  "type": "module",
  "files": [
    "types/**",
    "src/**"
  ],
  "scripts": {
    "types": "tsc",
    "prepublishOnly": "npm run types",
    "lint": "eslint --fix",
    "test": "mocha --exit \"./test/**/*.spec.js\"",
    "coverage": "c8 --reporter=lcov --report=text npm run test"
  },
  "keywords": [
    "ipfs",
    "libp2p",
    "p2p",
    "rpc"
  ],
  "author": "Carson Farmer <carson.farmer@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@nullify/libp2p-bundle": "0.0.2",
    "c8": "^7.4.0",
    "chai": "^4.2.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "mocha": "^8.2.1",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "it-buffer": "^0.1.2",
    "it-to-stream": "^0.1.2",
    "znode": "^1.1.5"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "prettier"
    ],
    "ignorePatterns": [
      "types/**",
      "**/*.[j|t]s.map"
    ],
    "rules": {
      "prettier/prettier": "error",
      "no-constant-condition": "off"
    }
  }
}